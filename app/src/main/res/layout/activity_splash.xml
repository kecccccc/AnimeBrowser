<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient">

    <!-- ANIME CHARACTER CIRCLE -->
    <androidx.cardview.widget.CardView
        android:id="@+id/characterCard"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:cardCornerRadius="90dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#BB86FC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.35">

        <ImageView
            android:id="@+id/ivAnimeGirl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/applogo"
            android:scaleType="centerCrop"
            android:contentDescription="Anime character"/>

    </androidx.cardview.widget.CardView>

    <!-- APP NAME WITH GLOW EFFECT -->
    <LinearLayout
        android:id="@+id/appNameContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/characterCard">

        <TextView
            android:id="@+id/tvAnimeBrowser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnimeBrowser"
            android:textColor="#FFFFFF"
            android:textSize="42sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:shadowColor="#BB86FC"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20"
            android:letterSpacing="0.02"/>

        <View
            android:id="@+id/underline"
            android:layout_width="120dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/glow_line"/>

    </LinearLayout>

    <!-- LOADING ANIMATION CONTAINER -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appNameContainer">

        <!-- ANIMATED DOTS (BIGGER) -->
        <View
            android:id="@+id/dot1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/loading_dot"/>

        <View
            android:id="@+id/dot2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/loading_dot"/>

        <View
            android:id="@+id/dot3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/loading_dot"/>

    </LinearLayout>

    <!-- TAGLINE -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Gateway to Anime"
        android:textColor="#9D9D9D"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.1"
        android:layout_marginBottom="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>